<div class="form-group col-md-3 col-sm-6">
    <label for="betterpayment_gender">{{ 'betterpayment.riskCheck.gender' | trans }}<span class="text-danger">*</span></label>
    <select id="betterpayment_gender" name="betterpayment_gender" class="form-select" form="confirmOrderForm" required>
        <option disabled selected value="">{{ 'betterpayment.riskCheck.selectGender' | trans }}</option>
        <option value="m">{{ 'betterpayment.riskCheck.male' | trans }}</option>
        <option value="f">{{ 'betterpayment.riskCheck.female' | trans }}</option>
        <option value="d">{{ 'betterpayment.riskCheck.diverse' | trans }}</option>
    </select>
</div>