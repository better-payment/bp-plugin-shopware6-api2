<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="BetterPayment\PaymentHandler\CreditCardHandler">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler" />
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransactionCaptureRefund\OrderTransactionCaptureRefundStateHandler" />
            <argument type="service" id="BetterPayment\Util\BetterPaymentClient" />

            <tag name="shopware.payment.method.async" />
        </service>

        <service id="BetterPayment\PaymentHandler\SofortHandler">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler" />
            <argument type="service" id="BetterPayment\Util\BetterPaymentClient" />

            <tag name="shopware.payment.method.async" />
        </service>

        <service id="BetterPayment\PaymentHandler\PaydirektHandler">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler" />
            <argument type="service" id="BetterPayment\Util\BetterPaymentClient" />

            <tag name="shopware.payment.method.async" />
        </service>

        <service id="BetterPayment\PaymentHandler\SEPADirectDebitHandler">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler" />
            <tag name="shopware.payment.method.sync" />
        </service>

        <service id="BetterPayment\Util\BetterPaymentClient">
            <argument type="service" id="BetterPayment\Util\ConfigReader" />
            <argument type="service" id="BetterPayment\Util\OrderParametersReader" />
            <argument type="service" id="order_transaction.repository" />
        </service>

        <service id="BetterPayment\Util\ConfigReader">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
        </service>

        <service id="BetterPayment\Util\OrderParametersReader">
            <argument type="service" id="customer_address.repository" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
        </service>

        <service id="BetterPayment\Controller\WebhookController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler" />
            <argument type="service" id="order_transaction.repository" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>